{
  "env" : {
    "browser": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "airbnb-base"],
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": "off",
    "no-new": "off",
    "comma-dangle": "off",
    "no-useless-constructor": "off",
    "implicit-arrow-linebreak": "off",
    "operator-linebreak": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}